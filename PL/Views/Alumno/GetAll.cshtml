@model ML.Alumno
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Alumnos</h2>
    <h5>Seleccione el boton de + para añadir un nuevo alumno</h5>
    <hr />

    <div class="row">

        <div class="col-md-12">

            @using (Html.BeginForm("GetAll", "Alumno", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {

                <div class="form-inline">
                    <div class="col-md-3">

                        @Html.LabelFor(model => model.Nombre)

                        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })


                    </div>

                    <div class="col-md-3">

                        @Html.LabelFor(model => model.ApellidoPaterno)

                        @Html.TextBoxFor(model => model.ApellidoPaterno, new { @class = "form-control" })



                    </div>

                    <div class="col-md-3">

                        @Html.LabelFor(model => model.ApellidoMaterno)

                        @Html.TextBoxFor(model => model.ApellidoMaterno, new { @class = "form-control" })



                    </div>


                    <div class="form-group">

                        <div class="col-md-3">

                            <input type="submit" value="Guardar" class="btn btn-success" />


                        </div>

                    </div>
                </div>


            }

        </div>

    </div>
    <hr />

    <div class="row">
        <div class="col-md-12 col-sm-3">
            @Html.ActionLink("+", "Form", "Alumno", htmlAttributes: new { @class = "btn btn-success" })
        </div>
    </div>

    <hr />

    <div class="row" style="padding-top:30px">
        <div class="col-md-12">
            <table class="table table-hover">
                <tr>
                    <th class="text-center" scope="col">
                        Editar
                    </th>
                    <th class="hidden" scope="col">
                        IdAlumno
                    </th>
                    <th class="text-center" scope="col">
                        Nombre completo
                    </th>

                    <th class="text-center" scope="col">
                        Fecha de Nacimiento
                    </th>
                    <th class="text-center" scope="col">
                        Sexo
                    </th>
                    <th class="hidden" scope="col">
                        IdSemestre
                    </th>

                    <th class="text-center" scope="col">
                        Semestre
                    </th>

                    <th class="text-center" scope="col">
                        Imagen
                    </th>
                    <th class="text-center" scope="col">
                        Estatus
                    </th>
                    <th class="text-center" scope="col">
                        Eliminar
                    </th>
                </tr>
                @foreach (ML.Alumno alumno in Model.Alumnos)
                {
                    <tr>
                        <td class="text-center">
                            <a class="btn btn-warning bi bi-pencil-square" href="@Url.Action("Form", "Alumno", new { IdAlumno = alumno.IdAlumno })"></a>
                        </td>
                        <td class="hidden">
                            @alumno.IdAlumno
                        </td>
                        <td class="text-center">
                            @alumno.Nombre @alumno.ApellidoPaterno @alumno.ApellidoMaterno
                        </td>

                        <td class="text-center">
                            @*@alumno.FechaNacimiento*@
                            @alumno.FechaNacimiento
                        </td>
                        <td class="text-center">
                            @alumno.Sexo
                        </td>

                        <td class="hidden">

                            @alumno.Semestre.IdSemestre
                        </td>
                        <td class="text-center">

                            @alumno.Semestre.Nombre
                        </td>
                        <td class="text-center">

                            @if (alumno.Imagen == null)
                            {
                                <img src="~/Imagenes/SinAlumno.png" style="width:80px; height:40px" />
                            }
                            else
                            {
                                <img src="data:image/*;base64,@alumno.Imagen" style="width:75px; height:35px" />
                            }
                        </td>
                       @* @if (alumno.Estatus)
                        {
                            <td><a href="@Url.Action("UpdateStatus", "Materia", new { IdMateria = materia.IdMateria})"><img src="~/Image/ON.jpg" style="width:80px; height:40px" /></a></td>
                        }
                        else
                        {
                            <td><a href="@Url.Action("UpdateStatus", "Materia", new { IdMateria = materia.IdMateria})"><img src="~/Image/OFF.jpg" style="width:75px; height:35px" /></a></td>
                        }*@
                        <th class="text-center">
                            <a class="btn btn-danger bi bi-trash3" href="@Url.Action("Delete", "Usuario", new { IdUsuario = alumno.IdAlumno })" onclick="return confirm('¿Estas seguro que deseas eliminar este registro?');"></a>
                        </th>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

